<!DOCTYPE html>
<head>
<title>Remyo | To-do List</title>
<!--STYLESHEET LINK-->
<link rel="stylesheet" href="/style.css">
<!--GOOGLE FONT-->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Rubik:wght@300&display=swap" rel="stylesheet">
<!--ICONS-->
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">

<meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
    <section class="todo-container">
        <h2>Remyo <span class="fas fa-check-double"></span> To-do List</h2>
        <section class="todo">
            <form action="/" method="POST" class="todo-header">
                <input type="text" name="title" value="title">
                <textarea rows="6" cols="45" name="content">content</textarea>
                <input type="date" name="dueDate" value="dueDate">
                <button type="submit"><span class="fas fa-plus">Add Task</span></button>
            </form>
          
            <ul class="todo-list">
                    <li class="todo-list-item listTitle">
                        <div>Task</div>
                        <div>Content</div>
                        <div>Due date</div>
                    </li>
                   <% todoTasks.forEach(details => { %>
                    <li class="todo-list-item">
                        <div class="todo-list-item-title"><%= details.title %></div>
                        <div class="todo-list-item-content"><%= details.content %></div>
                        <div class="todo-list-item-content date"><%= details.dueDate %></div>
                        <a href="/edit/<%= details._id %>" class="edit">
                        <span class="fas fa-edit"></span>
                        </a>
                        <a href="/edit/remove/<%= details._id %>" class="remove" onclick= "return confirm('Are you sure you want to delete this task?')">
                        <span class="fas fa-times"></span>
                        </a>
                    </li>
                <% }) %>
            </ul>
        </section>
    </section>
</body>